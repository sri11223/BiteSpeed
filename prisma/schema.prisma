generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Represents a customer contact entry used for identity reconciliation.
/// Multiple contacts can be linked together to represent the same customer.
model Contact {
  id             Int       @id @default(autoincrement())
  phoneNumber    String?   @map("phone_number")
  email          String?
  linkedId       Int?      @map("linked_id")
  linkPrecedence LinkPrecedence @default(primary) @map("link_precedence")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  deletedAt      DateTime? @map("deleted_at")

  // Self-referential relation: a secondary contact points to its primary
  linkedContact  Contact?  @relation("ContactLink", fields: [linkedId], references: [id])
  linkedContacts Contact[] @relation("ContactLink")

  @@index([email])
  @@index([phoneNumber])
  @@index([linkedId])
  @@index([linkPrecedence])
  @@index([email, phoneNumber])
  @@map("contacts")
}

enum LinkPrecedence {
  primary
  secondary

  @@map("link_precedence")
}
